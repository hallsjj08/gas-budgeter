<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gui.EditCarActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/edit_car_pic"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:contentDescription="@string/car_pic"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:background="@drawable/image_border_background"
        android:src="@drawable/noun_sports_car"
        android:transitionName="editCarDestination" />

    <Button
        android:id="@+id/buttonYear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/edit_car_pic"
        android:layout_below="@id/edit_car_pic"
        android:background="@android:color/transparent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawableEnd="@drawable/down_arrow"
        android:textStyle="normal"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_car_pic"
        android:layout_alignStart="@id/buttonYear"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/buttonYear"
        app:layout_constraintBottom_toBottomOf="@id/buttonYear"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/editCarYear"/>

    <Button
        android:id="@+id/buttonMake"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonYear"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawableEnd="@drawable/down_arrow"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical" />

    <TextView
        android:id="@+id/tvMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/buttonMake"
        app:layout_constraintBottom_toBottomOf="@id/buttonMake"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/editCarMake"/>

    <Button
        android:id="@+id/buttonModel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMake"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawableEnd="@drawable/down_arrow"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/buttonModel"
        app:layout_constraintBottom_toBottomOf="@id/buttonModel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/editCarModel"/>

    <Button
        android:id="@+id/buttonType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonModel"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawableEnd="@drawable/down_arrow"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/buttonType"
        app:layout_constraintBottom_toBottomOf="@id/buttonType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/editCarType"/>

    <Button
        android:id="@+id/remove_car_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonType"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:textColor="#F00"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/remove_vehicle" />


</android.support.constraint.ConstraintLayout>