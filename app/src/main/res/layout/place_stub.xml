<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/place_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Place Test"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/place_title"
            android:id="@+id/place_directions"
            android:text="Directions"
            android:background="@color/secondaryColor"
            android:drawableStart="@android:drawable/ic_menu_directions"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/pb_retrieving_location"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pb_retrieving_location"
            android:layout_marginTop="36dp"
            android:id="@+id/retrieve_location_text"
            android:text="Getting your location..."
            android:visibility="gone"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>