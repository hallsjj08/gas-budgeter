<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/newCarPic"
        android:layout_above="@id/newCarText"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/noun_sports_car"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Add a car to see the approximate amount you'll pay in fuel cost to your destination."
        android:id="@+id/newCarText"
        android:layout_margin="16dp"
        style="@style/text_style"/>

</RelativeLayout>